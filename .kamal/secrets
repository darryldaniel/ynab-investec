SECRETS=$(kamal secrets fetch --account my --adapter 1Password --from 'Private/YNAB Investec Rails App' api_key client_id client_secret access_token budget_id database_url master_key app_username app_password cronitor_api_key root_password)
DOCKER_SECRETS=$(kamal secrets fetch --account my --adapter 1Password --from 'Private/docker.com' ynab_investec_pat)

KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract ynab_investec_pat $DOCKER_SECRETS)
INVESTEC_API_KEY=$(kamal secrets extract api_key $SECRETS)
INVESTEC_CLIENT_ID=$(kamal secrets extract client_id $SECRETS)
INVESTEC_CLIENT_SECRET=$(kamal secrets extract client_secret $SECRETS)
YNAB_ACCESS_TOKEN=$(kamal secrets extract access_token $SECRETS)
YNAB_BUDGET_ID=$(kamal secrets extract budget_id $SECRETS)
DATABASE_URL=$(kamal secrets extract database_url $SECRETS)
RAILS_MASTER_KEY=$(kamal secrets extract master_key $SECRETS)
APP_USERNAME=$(kamal secrets extract app_username $SECRETS)
APP_PASSWORD=$(kamal secrets extract app_password $SECRETS)
CRONITOR_API_KEY=$(kamal secrets extract cronitor_api_key $SECRETS)
MYSQL_ROOT_PASSWORD=$(kamal secrets extract root_password $SECRETS)
